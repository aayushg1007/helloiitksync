{
    "manifest_version": 3,
    "name": "HelloIITK Sync",
    "version": "1.1",
    "description": "Automatically downloads new files from HelloIITK courses.",
    "permissions": [
        "storage",
        "downloads",
        "notifications",
        "offscreen",
        "tabs",       
        "scripting"   
    ],
    "host_permissions": [
        "https://hello.iitk.ac.in/"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "images/icon48.png"
        }
    },
    "icons": {
        "48": "images/icon48.png"
    }
}